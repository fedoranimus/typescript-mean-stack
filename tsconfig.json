{
	"version": "2.0.0",
	"compilerOptions":{
		"target": "es6",
		"module": "commonjs",
		"emitDecoratorMetadata": true,
        "experimentalDecorators": true,
		"sourceMap": true,
		"outDir": "dist",
		"watch": true,
		"preserveConstEnums": true
	},
	"filesGlob": [
		"./src/**/*.ts",
		"./custom_typings/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"environments"
	]
}